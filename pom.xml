    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>analyze</id>
                        <goals>
                            <goal>analyze-only</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <version>1.8.0</version>
                <executions>
                    <execution>
                        <!-- disabled by default. enabled by docker profiles -->
                        <phase>none</phase>
                        <goals>
                            <goal>build</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <from>
                        <image>adoptopenjdk/openjdk11:alpine-jre</image>
                    </from>
                    <to>
                        <image>${container.image}:${container.version}</image>
                    </to>
                    <container>
                        <ports>
                            <port>8080</port>
                        </ports>
                        <useCurrentTimestamp>true</useCurrentTimestamp>
                    </container>
                </configuration>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>3.1.1</version>
                    <executions>
                        <execution>
                            <id>analyze</id>
                            <goals>
                                <goal>analyze-only</goal>
                            </goals>
                            <configuration>
                                <failOnWarning>true</failOnWarning>
                                <ignoredDependencies>
                                    <ignoredDependency>com.auth0:jwks-rsa</ignoredDependency>
                                    <ignoredDependency>com.google.code.findbugs:jsr305</ignoredDependency>
                                    <ignoredDependency>com.google.code.findbugs:annotations</ignoredDependency>
                                    <ignoredDependency>com.google.errorprone:error_prone_annotations</ignoredDependency>

                                    <!-- Ignore these so that the KMS client dictates the versions -->
                                    <ignoredDependency>com.google.http-client:google-http-client:jar</ignoredDependency>

                                    <!-- Not used for compile time, only for OkHttp 4 support-->
                                    <ignoredDependency>com.fasterxml.jackson.module:jackson-module-kotlin:jar</ignoredDependency>

                                    <ignoredDependency>org.liquibase:liquibase-core:jar</ignoredDependency>
                                    <ignoredDependency>org.postgresql:postgresql:jar</ignoredDependency>
                                    <ignoredDependency>org.springframework</ignoredDependency>
                                    <ignoredDependency>org.springframework.boot</ignoredDependency>
                                    <ignoredDependency>org.springframework.hateoas</ignoredDependency>
                                    <ignoredDependency>org.springframework.security</ignoredDependency>
                                    <ignoredDependency>org.springframework.data</ignoredDependency>
                                    <ignoredDependency>org.zalando</ignoredDependency>
                                </ignoredDependencies>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>docker</id>
            <!-- ship liquibase with docker image build -->
            <dependencies>
                <dependency>
                    <groupId>org.liquibase</groupId>
                    <artifactId>liquibase-core</artifactId>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.google.cloud.tools</groupId>
                        <artifactId>jib-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <container>
                                <jvmFlags>
                                    <jvmFlag>-server</jvmFlag>
                                    <jvmFlag>-Xverify:none</jvmFlag>
                                    <jvmFlag>-XX:TieredStopAtLevel=1</jvmFlag>
                                    <jvmFlag>-Dspring.profiles.default=dev</jvmFlag>
                                </jvmFlags>
                            </container>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
