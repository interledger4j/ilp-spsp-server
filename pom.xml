                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.immutables</groupId>
                <artifactId>value</artifactId>
                <version>2.7.5</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>org.interledger</groupId>
                <artifactId>quilt-bom</artifactId>
                <version>${ilp.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- TODO: FIXME remove connector dependencies if possible -->
            <dependency>
                <groupId>org.interledger.connector</groupId>
                <artifactId>connector-accounts</artifactId>
                <version>${ilp-connector.version}</version>
            </dependency>
            <dependency>
                <groupId>org.interledger.connector</groupId>
                <artifactId>connector-core</artifactId>
                <version>${ilp-connector.version}</version>
            </dependency>
            <dependency>
                <groupId>org.interledger.connector</groupId>
                <artifactId>connector-crypto</artifactId>
                <version>${ilp-connector.version}</version>
            </dependency>
            <dependency>
                <groupId>org.interledger.connector</groupId>
