    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.1.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>org.interledger.spsp</groupId>
    <artifactId>spsp-server</artifactId>
    <version>0.1-SNAPSHOT</version>
    <name>spsp-server</name>
    <description>An Interledger SPSP server with a stateless STREAM receiver that publishes events.</description>

    <properties>
        <container.image>interledger4j/spsp-server</container.image>
        <container.version>${project.version}</container.version>

        <java.version>1.8</java.version>
        <ilp.version>1.0.3</ilp.version>
        <ilp-connector.version>0.1.0-SNAPSHOT</ilp-connector.version>
        <problem.version>0.23.0</problem.version>
        <problem-spring-web.version>0.25.2</problem-spring-web.version>
        <failBuildOnAnyVulnerability>false</failBuildOnAnyVulnerability>
        <spring-cloud.version>Hoxton.RC2</spring-cloud.version>

        <checkstyle.config.location>checkstyle.xml</checkstyle.config.location>
        <checkstyle.violationSeverity>error</checkstyle.violationSeverity>
        <!-- org.jacoco:jacoc-maven-plugin -->
        <jacoco.propertyName>argLine</jacoco.propertyName>
        <!--
          -DskipUTs=true for skipping surefire tests.
          -DskipITs=true for skipping failsafe tests.
          -DskipTests=true for skipping all tests.
        -->
        <skipTests>false</skipTests>
        <skipITs>${skipTests}</skipITs>
        <skipUTs>${skipTests}</skipUTs>
    </properties>

